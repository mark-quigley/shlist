<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"



    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"



        >

        <TextView
            android:id="@+id/item_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="60dp"
            android:text="Item"
             />

        <TextView
            android:id="@+id/qty_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="60dp"
            android:text="Qty"
            android:layout_toRightOf="@id/item_main"/>

        <ImageView
            android:id="@+id/aldi_main"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:paddingRight="10dp"
            android:src="@drawable/aldi"
            android:layout_toRightOf="@id/qty_main"/>


        <ImageView
            android:id="@+id/lidi_main"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingRight="10dp"

            android:src="@drawable/lidl"
            android:layout_toRightOf="@id/aldi_main"/>

        <ImageView
            android:id="@+id/dunne_main"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:paddingRight="10dp"
            android:src="@drawable/dunnes"
            android:layout_toRightOf="@id/lidi_main"/>

